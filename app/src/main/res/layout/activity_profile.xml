<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:id="@+id/fotoProfile"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/ic_profile"/>

    <TextView
        android:id="@+id/namaProfile"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Nama"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="90dp"
        android:textSize="24dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/job"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Your Job"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="120dp"
        android:textSize="24dp"
        android:textColor="@color/black"/>

    <Button
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_edit"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:width="346dp"
        android:height="102dp"
        android:background="@drawable/btn_editprofile"
        android:layout_marginTop="200dp"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawableTint="@color/black"/>

    <Button
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:id="@+id/change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_pass"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:width="346dp"
        android:height="102dp"
        android:background="@drawable/btn_pass"
        android:layout_marginTop="10dp"
        android:layout_below="@id/edit_profile"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawableTint="@color/black"/>

    <Button
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_setting"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:width="346dp"
        android:height="102dp"
        android:background="@drawable/btn_setting"
        android:layout_marginTop="10dp"
        android:layout_below="@id/change_password"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawableTint="@color/black"/>

    <Button
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_logout"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:width="346dp"
        android:height="102dp"
        android:background="@drawable/btn_logout"
        android:layout_marginTop="10dp"
        android:layout_below="@id/setting"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:drawableEnd="@drawable/ic_chevron"
        android:drawableTint="@color/black"/>

</RelativeLayout>