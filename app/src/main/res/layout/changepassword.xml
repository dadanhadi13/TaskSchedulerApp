<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="209dp"
        android:layout_height="134dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="95dp"
        app:srcCompat="@drawable/changepass" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="76dp"
        android:text="Ganti Password Disini!"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="206dp"
        android:paddingLeft="10dp"
        android:hint="Masukkan password lama"
        android:background="@drawable/form"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edt_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_old_password"
        android:layout_marginTop="12dp"
        android:paddingLeft="10dp"
        android:hint="Masukkan password baru"
        android:inputType="textPassword"
        android:background="@drawable/form"
        android:minHeight="48dp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/edt_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_new_password"
        android:layout_marginTop="12dp"
        android:paddingLeft="10dp"
        android:hint="Konfirmasi password baru"
        android:inputType="text"
        android:background="@drawable/form"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/edt_confirm_password"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/button_primary"
            android:text="Ubah"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_exit"
            android:text="Bersihkan"
            android:textColor="#222831"
            android:textStyle="bold"
            android:textSize="18dp"
            android:onClick="reset"
            android:layout_marginLeft="40dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</RelativeLayout>
