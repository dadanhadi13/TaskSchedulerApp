<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Hal_LogOut">
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:padding="30dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/ic_logout"></ImageView>

    </RelativeLayout>

    <TextView
        android:layout_width="413dp"
        android:layout_height="100dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"
        android:gravity="center"
        android:padding="10dp"
        android:text="TERIMAKASIH SEMOGA HARI LEBIH BAIK"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/KembaliHalaman"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:background="@drawable/form"
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:text="kembali halaman"
        android:textColor="#2196F3"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>


</LinearLayout>
